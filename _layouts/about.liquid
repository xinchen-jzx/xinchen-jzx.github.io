---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- Education -->
    {% if page.education %}
      <h2>
        <a href="{{ '/cv/' | relative_url }}" style="color: inherit">education</a>
      </h2>
      <div class="education-section">
        {% for item in page.education %}
          <div class="education-item">
            <div class="row">
              <div class="col-sm-3">
                {% if item.logo %}
                  <div class="education-logo">
                    {% assign logo_path = item.logo | prepend: 'assets/img/' %}
                    {%
                      include figure.liquid loading="eager" path=logo_path class="img-fluid" alt=item.institution
                    %}
                  </div>
                {% endif %}
              </div>
              <div class="col-sm-9">
                <h4 class="education-institution">{{ item.institution }}</h4>
                <p class="education-degree">{{ item.degree }} <span class="education-date">({{ item.date }})</span></p>
                {% if item.teacher %}
                  <p class="education-teacher">{{ item.teacher }}</p>
                {% endif %}
                {% if item.description %}
                  <p class="education-description">{{ item.description }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    <!-- Experience -->
    {% if page.experience %}
      <h2>
        <a href="{{ '/cv/' | relative_url }}" style="color: inherit">experience</a>
      </h2>
      <div class="experience-section">
        {% for item in page.experience %}
          <div class="experience-item">
            <div class="row">
              <div class="col-sm-3">
                {% if item.logo %}
                  <div class="experience-logo">
                    {% assign logo_path = item.logo | prepend: 'assets/img/' %}
                    {%
                      include figure.liquid loading="eager" path=logo_path class="img-fluid" alt=item.position
                    %}
                  </div>
                {% endif %}
              </div>
              <div class="col-sm-9">
                <h4 class="experience-position">{{ item.position }}</h4>
                <p class="experience-company">{{ item.company }} <span class="experience-date">({{ item.date }})</span></p>
                {% if item.description %}
                  <p class="experience-description">{{ item.description }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>

<!-- Lover Display (Fixed Position) -->
{% if page.lover %}
  <div class="lover-display" id="lover-display">
    <button class="lover-toggle" onclick="toggleLoverDisplay()">‚àí</button>
    <div class="lover-container">
      <div class="lover-card left-card">
        <div class="card-icon">üë§</div>
      </div>
      <div class="lover-heart">‚ù§Ô∏è</div>
      <div class="lover-card right-card">
        <div class="card-icon">üë§</div>
      </div>
    </div>
    <div class="lover-timer">
      <span id="lover-days">0</span> day <span id="lover-hours">0</span> h <span id="lover-minutes">0</span> m <span id="lover-seconds">0</span> s
    </div>
  </div>
  
  <script>
    function updateLoverTimer() {
      const startDate = new Date('{{ page.lover_start_date }}');
      const now = new Date();
      const diff = now - startDate;
      
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);
      
      document.getElementById('lover-days').textContent = days;
      document.getElementById('lover-hours').textContent = hours;
      document.getElementById('lover-minutes').textContent = minutes;
      document.getElementById('lover-seconds').textContent = seconds;
    }
    
    function toggleLoverDisplay() {
      const display = document.getElementById('lover-display');
      const toggle = display.querySelector('.lover-toggle');
      
      if (display.classList.contains('minimized')) {
        display.classList.remove('minimized');
        toggle.textContent = '‚àí';
      } else {
        display.classList.add('minimized');
        toggle.textContent = '‚ù§Ô∏è';
      }
    }
    
    // Check saved state
    const loverMinimized = localStorage.getItem('loverMinimized');
    if (loverMinimized === 'true') {
      document.getElementById('lover-display').classList.add('minimized');
      document.querySelector('.lover-toggle').textContent = '‚ù§Ô∏è';
    }
    
    // Save state on toggle
    const originalToggle = window.toggleLoverDisplay;
    window.toggleLoverDisplay = function() {
      originalToggle();
      const isMinimized = document.getElementById('lover-display').classList.contains('minimized');
      localStorage.setItem('loverMinimized', isMinimized);
    }
    
    updateLoverTimer();
    setInterval(updateLoverTimer, 1000);
  </script>
{% endif %}
